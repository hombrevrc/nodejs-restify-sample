{
    "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "removeComments": true,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "filesGlob": [
      "/app",
      "/config",
    //   "/test",
    //   "/utils",
      "server.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}